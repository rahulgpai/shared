{% extends 'adminBase.html.twig' %}



{% block body %}
    <div class="">
        <a href="{{ path('add_user_form') }}">ADD USER</a>
        <a href="{{ path('logout') }}">LOGOUT</a>
    </div>
    <table>
        <tr>
            <th style="border:1px solid #000; padding: 5px;">Sr. No.</th>
            <th style="border:1px solid #000; padding: 5px;">User Name</th>
            <th style="border:1px solid #000; padding: 5px;">User Email</th>
            {#
                <th style="border:1px solid #000; padding: 5px;">&nbsp;</th>
                <th style="border:1px solid #000; padding: 5px;">&nbsp;</th>
            #}
            <th colspan="2" style="border:1px solid #000; padding: 5px;">ACTION</th>
        </tr>
    {% for user in users %}
        <tr>
            <td style="border:1px solid #000; padding: 5px;">{{ user.id }}</td>
            <td style="border:1px solid #000; padding: 5px;">{{ user.username }}</td>
            <td style="border:1px solid #000; padding: 5px;">{{ user.email }}</td>
            {#
                <td style="border:1px solid #000; padding: 5px;">{% if user.isAdmin %} {{ user.isAdmin }} {% else %} &nbsp; {% endif %}</td>
                <td style="border:1px solid #000; padding: 5px;">{{ user.isActive }}</td>
            #}
            <td style="border:1px solid #000; padding: 5px;"><a href="/user/{{ user.id }}/view">VIEW</a></td>
            <td style="border:1px solid #000; padding: 5px;"><a href="/user/{{ user.id }}/edit">EDIT</a></td>
        </tr>
    {% endfor %}
    </table>
{% endblock %}

